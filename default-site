server {
    listen 80 http2 default_server;
    listen [::]:80 http2 default_server;

    listen 443 ssl http2 default_server;
    listen [::]:443 ssl http2 default_server;

    server_name _;

    # self-signed certificate
    ssl_stapling off;
    ssl_certificate /etc/nginx/ssl/cert.pem;
    ssl_certificate_key /etc/nginx/ssl/privkey.pem;

    return 444;
}
